#!/bin/bash

# stow the package
pushd "/stow" > /dev/null
sudo stow -t "/" "$1"
popd > /dev/null

# mkdir unless exists
if ! [[ -d "/stow-enabled" ]]; then
  sudo mkdir -p "/stow-enabled"
fi

# symlink to indicate that the package is stowed
pushd "/stow-enabled" > /dev/null
sudo ln -sf "/stow/$1" "$1"
popd > /dev/null
